---
const { title, desc, techs, link, ghLink } = Astro.props;
---

<div class="wrap">
  <h1>{link !== undefined ? <a href=`${link}`>{title} -></a> : <p>{title} (GitHub)</p>}</h1>
  <a class="link" href=`${ghLink}`>GitHub repozitář</a>
  <p class="desc">{desc}</p>
  <p class="techs">{techs}</p>
  {}
</div>

<style>
  .wrap {
    display: flex;
    flex: 1;
    flex-direction: column;
    background-color: var(--interactive-backg);
    padding: 16px;
    box-shadow: 0px 2px 4px 2px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
  }
  .link {
    padding-top: 8px;
    &:hover {
      cursor: pointer;
      text-decoration: underline;
    }
  }
  .desc {
    color: var(--small-text);
    padding: 24px 0;
    flex: 1;
  }
  h1 {
    font-size: 1.3em;
    color: var(--main-text);
  }
  a {
    text-decoration: none;
    color: var(--main-text);
    &:hover {
      text-decoration: underline;
    }
  }
  .techs {
    font-weight: 300;
    font-style: italic;
  }
</style>
