---
const { title, desc, techs } = Astro.props;
---

<div class="wrap">
  <h1><a href="">{title} -></a></h1>
  <p class="desc">{desc}</p>
  <p class="techs">{techs}</p>
</div>

<style>
  .wrap {
    display: flex;
    flex: 1;
    flex-direction: column;
    background-color: var(--interactive-backg);
    padding: 16px;
    box-shadow: 0px 2px 4px 2px rgba(0, 0, 0, 0.15);
    border-radius: 10px;
  }
  .desc {
    color: var(--small-text);
    padding: 24px 0;
  }
  h1 {
    font-size: 1.3em;
  }
  a {
    text-decoration: none;
    color: var(--main-text);
  }
  .techs {
    font-weight: 300;
    font-style: italic;
  }
</style>
