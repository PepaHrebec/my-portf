---
const { title, description, date, image } = Astro.props;
const dateStr = new Date(date).toISOString().substring(0, 10);
---

<main>
  <div class="center">
    <img src=`${image}` alt="" />
    <h1>{title}</h1>
    <p class="date">{dateStr}</p>
  </div>
  <p class="descr">{description}</p>
  <slot />
</main>

<style is:global>
  main {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-bottom: 16px;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    color: var(--main-text);
  }
  p {
    line-height: 1.6;
  }
  a {
    color: var(--main-text);
    font-weight: 700;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
  header {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-bottom: 16px;
  }
  .center {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }
  img {
    aspect-ratio: 16/9;
    width: 100%;
    object-fit: cover;
    border-radius: 10px;
  }
  .descr {
    font-weight: 700;
  }
  pre {
    border-radius: 10px;
    padding: 8px;
  }
  pre * {
    font-family: monospace;
  }
  li {
    margin-bottom: 8px;
  }
</style>

<script>
  const as: NodeListOf<HTMLAnchorElement> = document.querySelectorAll("a");
  as.forEach((a) => {
    a.classList.contains("exclude") ? null : (a.target = "_blank");
  });
</script>
