---
interface Props {
  title: string;
  description: string;
  type: string;
  image: string;
}

import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/700.css";

import Header from "../components/Header.astro";
import { SEO } from "astro-seo";

const { title, description, type, image } = Astro.props;
---

<!doctype html>
<html lang="cs" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <SEO
      title={title}
      description={description}
      canonical={Astro.url.href}
      openGraph={{
        basic: {
          title: title,
          type: type,
          image: `https://josefhrebec.cz${image}`,
        },
        optional: {
          description: description,
        },
      }}
      ,
      twitter={{
        title: title,
        image: `https://josefhrebec.cz/assets/playdate.jpg`,
        imageAlt: "Logo of Blogfolio",
        description: description,
      }}
    />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="google-site-verification"
      content="XlVww1Zp-aI8eJPXDaNalhd7ZXv1v8Lb6cbU7B4cIFk"
    />
  </head>
  <body>
    <Header />
    <slot />
    <script src="../libs/darkmode.ts"></script>

    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Inter", sans-serif;
      }
      [data-theme="light"] {
        --main-backg: #f7f7f7;
        --main-text: #1e1e1e;
        --interactive-backg: #fafafa;
        --small-text: #585858;
        --inverse-backg: #161616;
        --inverse-text: #e3e3e3;
      }
      [data-theme="dark"] {
        --main-backg: #161616;
        --main-text: #e3e3e3;
        --interactive-backg: #282828;
        --small-text: #b3b3b3;
        --inverse-backg: #f7f7f7;
        --inverse-text: #1e1e1e;
      }
      [data-theme="dark"] .astro-code,
      [data-theme="dark"] .astro-code span {
        color: var(--shiki-dark) !important;
        background-color: var(--shiki-dark-bg) !important;

        font-style: var(--shiki-dark-font-style) !important;
        font-weight: var(--shiki-dark-font-weight) !important;
        text-decoration: var(--shiki-dark-text-decoration) !important;
      }
      html {
        background-color: var(--main-backg);
      }
      body {
        padding: 32px 16px;
        max-width: 48rem;
        margin: 0 auto;
      }
    </style>
  </body>
</html>
